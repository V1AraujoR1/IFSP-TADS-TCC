<resources>

	<style name="Theme.TCC" parent="Theme.Material3.DayNight.NoActionBar">
		<item name="fontFamily">@font/montserrat</item>
		<item name="android:textColor">@color/text</item>
		<item name="android:windowBackground">@color/background</item>
		<item name="android:buttonTint">@color/primary</item>
		<item name="android:statusBarColor">@color/accent</item>
		<item name="toolbarStyle">@style/ToolbarStyle</item>
		<item name="navigationViewStyle">@style/NavigationViewStyle</item>
	</style>

	<style name="Theme.TCC.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
		<item name="android:background">@color/secondary</item>
	</style>

	<style name="NavigationViewStyle" parent="Widget.Material3.NavigationView">
		<item name="android:background">@color/background</item>
		<item name="itemTextColor">@color/text</item>
		<item name="subheaderColor">@color/accent</item>
	</style>

	<style name="SwitchPreferenceCompatStyle" parent="Preference.SwitchPreferenceCompat">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary</item>
		<item name="colorSecondary">@color/secondary</item>
		<item name="colorAccent">@color/accent</item>
		<item name="colorControlNormal">@color/primary</item>
		<item name="colorControlActivated">@color/primary</item>
		<item name="colorControlHighlight">@color/primary</item>
		<item name="colorButtonNormal">@color/primary</item>
		<item name="colorSwitchThumbNormal">@color/primary</item>
	</style>

</resources>